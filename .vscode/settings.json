{
    "editor.fontSize": 16,
    "workbench.colorCustomizations": {
        "activityBar.background": "#07717f",
        "activityBar.inactiveForeground": "#000000",
    },
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        },
    },
    "pylint.args" : [
        "--disable=C0116,W1203,W1201,C0115,C0114,E0401,W1514,E0611,C0412,W0611",
        "--ignore-paths=.venv/, as_scripts/, app/PyDofus/"],

    "python.analysis.extraPaths": [
        // for good imports suggesting
        "./app"
    ],
    "python.analysis.typeCheckingMode": "basic",
    "python.defaultInterpreterPath": ".\\.venv\\Scripts\\python.exe"
}