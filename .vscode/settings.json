{
    "workbench.iconTheme": "material-icon-theme",
    "editor.fontSize": 16,
    "workbench.colorCustomizations": {
        "activityBar.background": "#07717f",
        "activityBar.inactiveForeground": "#000000",
    },

    "python.languageServer": "Pylance",
    "python.analysis.fixAll": [
        "source.unusedImports"
    ],
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
            "source.fixAll": true
        },
    },
    "python.analysis.extraPaths": [
        // for good imports suggesting
        "./app"
    ],
    "python.analysis.autoImportCompletions": true,
    "python.analysis.typeCheckingMode": "basic",
    "python.defaultInterpreterPath": ".\\.venv\\Scripts\\python.exe",

    "ruff.enable": true,
    "ruff.fixAll": true,
    "ruff.lint.run": "onType",
    "ruff.lint.args" : [
        // "--disable=C0116,W1203,W1201,C0115,C0114,E0401,W1514,E0611,C0412,W0611",
        "--ignore-paths=.venv/, code_source/"],


    // For better vscode performance
    "editor.codeLens": false,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/.venv": true,
        "**/.mypy_cache": true,
        "**/.idea": true
    },
    "search.searchOnType": false,
    "editor.minimap.enabled": false,
    "terminal.integrated.gpuAcceleration": "on"
}